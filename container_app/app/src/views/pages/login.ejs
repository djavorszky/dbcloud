<!doctype html>
<html lang="en">
<head>
<%- include('../snipplets/head.ejs'); %>
<link href="/css/signin.css" rel="stylesheet">

</head>
<body>
    <div class="container">

        <form class="form-signin" method="post" action="/login">
            <h2 class="form-signin-heading">Sign in to Cloud DB</h2>

            <label for="userName" class="sr-only">Username</label>
            <input type="text" name="login_username" id="userName" class="form-control" placeholder="Username (LRDCOM Credentials)" required autofocus>

            <label for="userPassword" class="sr-only">Password</label>
            <input type="password" name="login_password" id="userPassword" class="form-control" placeholder="Password" required>

            <button class="btn btn-lg btn-primary btn-block login-form-submit fa-sign-in" type="submit">Sign in</button>
        </form>
    </div>
</body>
</html>

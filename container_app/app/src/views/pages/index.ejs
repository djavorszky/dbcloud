<!doctype html>
<html lang="en">
  <head>
  <%- include('../snipplets/head.ejs'); %>
  </head>

<body>

    <div class='container-fluid'>

    <!-- Top menu -->

    <div class='row'>
    <%- include('../snipplets/top_nav.ejs'); %>
    </div> <!-- </row, navbar> -->

    <% if (is_session_authenticated == 0) { %>
    <div class='row'>
        <div class='col-md-offset-8 col-md-4'>
            <!-- login section start -->
            <!-- show a selection of files -->
            <a href='/login'> Please log in </a>
        </div>
    </div>
    <% } else { %>
    <!-- file section start -->

    <div class='row'>
        <div class='file_selection col-md-4'>

        </div>
        <div class='status_box col-md-8'>

          <label for="show_only_mine">
            <input type='checkbox' id='show_only_mine'> Show only my databases
          </label>

           <br>

           <div class='db_list'> </div>
           <div class='event_log'>
             <h4> Event log </h4>
             <div class='queue_log'></div>
             <div class='d_progress'></div>
           </div>
        </div>
    </div> <!-- row section end -->
    <div id='notification'>

    </div>
    <!-- Modal -->
    <%- include('db_import_options.ejs') %>
    <%- include('db_clone_options.ejs') %>
    <%- include('db_new_database.ejs') %>
    <%- include('db_info.ejs') %>
    <%- include('help.ejs') %>
    <%- include('update_owner.ejs') %>
    <%- include('token_management.ejs') %>
    <% } %>
    </div>
</body>

</html>
